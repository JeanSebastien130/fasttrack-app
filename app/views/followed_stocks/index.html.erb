<ul class="followed-stock-all dflex justify-space-around">
  <% @followedstocks.each do |fstock| %>
      <li class= "one-stock pt-2">
        <div class="d-flex bd-highlight" style="height: 20px">
          <div class="pl-4 bd-highlight"> <%= fstock.stock.ticker %> </div>
          <div class="pl-2 bd-highlight"> <%= link_to "-", followed_stock_path(fstock), method: :delete, class: "btn btn-delete" %> </div>
          <div class="ml-auto pr-4 bd-highlight"> <%= @stock_market_prices[fstock.stock.id][:latest_price] %> </div>
        </div>
        <div class="fs-info d-flex bd-highlight mb-3">
          <% if @stock_market_prices[fstock.stock.id].present?%>
            <div class="name pl-4 bd-highlight"> <%= fstock.stock.name %> </div>
            <div class= "info-2 ml-auto pr-4 bd-highlight"><%= @stock_market_prices[fstock.stock.id][:change_percent_s] %></div>
          <% end %>
        </div>
    </li>
  <% end %>
</ul>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#followmodal">
  Add a stock
</button>

<!-- followModal -->
<div class="modal fade" id="followmodal" tabindex="-1" role="dialog" aria-labelledby="followmodalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="followmodalLabel">Stock</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@followedstock) do |f| %>
          <%= f.association :stock, input_html: { class: 'select2' }  %>
        <div class="modal-footer">
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
