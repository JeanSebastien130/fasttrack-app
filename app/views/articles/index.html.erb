<div class="container">
  <div class="d-flex justify-content-center m-3">
    <h1>News</h1>
  </div>


  <%= simple_form_for :search, url: articles_path, method: :get do |f| %>
  <div class="search-form-control form-group d-flex justify-content-center">
    <input class="form-control string required w-50" type="text" value="<%= params.dig(:search, :query) %>"
      name="search[query]" id="search_query" placeholder="Type a ticker" />
    <button name="button" type="submit" class="btn btn-primary button-articles">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>


  <div class="cards-ft">
      <% news = params.dig(:search, :query).nil? ? [] : @client.news(params.dig(:search, :query),6) %>
      <% news.each do |n| %>
      <div class="card all-cards" style="width: 22rem;">
        <img class="article-img" src="<%= n.image %>" alt="">
        <div class="card-body">
          <h5 class="card-title"><%= n.headline %></h5>
          <p class="card-text"><%= n.summary %></p>
          <%= link_to("Read more", n.url) %>
        </div>
      </div>
      <% end %>
    </div>
</div>
